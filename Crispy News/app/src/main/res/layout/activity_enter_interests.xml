<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EnterInterests">

    <!-- Title -->
    <TextView
        android:id="@+id/subtitleInterests"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just one more step"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/titleInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Interests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitleInterests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Business Slider -->
    <TextView
        android:id="@+id/businessTextView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business News"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/titleInterests"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/businessSlider"
        android:value="50"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:stepSize="10"
        app:layout_constraintTop_toBottomOf="@+id/businessTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Entertainment Slider -->
    <TextView
        android:textColor="@color/white"
        android:id="@+id/entertainmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment News"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/businessSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/entertainmentSlider"
        android:value="50"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:stepSize="10"
        app:layout_constraintTop_toBottomOf="@+id/entertainmentTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Health Slider -->
    <TextView
        android:id="@+id/healthTextView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health News"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/entertainmentSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/healthSlider"
        android:value="50"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:stepSize="10"
        app:layout_constraintTop_toBottomOf="@+id/healthTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Science Slider -->
    <TextView
        android:id="@+id/scienceTextView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science News"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/healthSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/scienceSlider"
        android:value="50"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:stepSize="10"
        app:layout_constraintTop_toBottomOf="@+id/scienceTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Sports Slider -->
    <TextView
        android:id="@+id/sportsTextView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports News"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/scienceSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/sportsSlider"
        android:value="50"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:stepSize="10"
        app:layout_constraintTop_toBottomOf="@+id/sportsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Technology Slider -->
    <TextView
        android:id="@+id/technologyTextView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technology News"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sportsSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/technologySlider"
        android:value="50"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:stepSize="10"
        app:layout_constraintTop_toBottomOf="@+id/technologyTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        style="@style/Widget.Material3.Button"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        app:elevation="10dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/technologySlider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Skip for Now Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSkip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Skip for Now"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>